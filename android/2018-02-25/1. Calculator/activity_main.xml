<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_column="4"
        android:text="0"
        android:textSize="30dp"
        android:id="@+id/fomula"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="0"
        android:textSize="30dp"
        android:id="@+id/number"
        android:layout_column="4"
        />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow android:layout_weight="1">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="CE"
                android:textSize="30dp"
                android:layout_weight="1"
                android:id="@+id/op0"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="C"
                android:textSize="30dp"
                android:layout_weight="1"
                android:id="@+id/op1"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="BS"
                android:textSize="30dp"
                android:layout_weight="1"
                android:id="@+id/op2"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="/"
                android:textSize="30dp"
                android:layout_weight="1"
                android:id="@+id/op3"
                />
        </TableRow>
        <TableRow android:layout_weight="1">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="7"
                android:textSize="30dp"
                android:layout_weight="1"
                android:id="@+id/btn7"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8"
                android:textSize="30dp"
                android:layout_weight="1"
                android:id="@+id/btn8"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="30dp"
                android:layout_weight="1"
                android:id="@+id/btn9"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="*"
                android:textSize="30dp"
                android:layout_weight="1"
                android:id="@+id/op4"
                />
        </TableRow>
        <TableRow android:layout_weight="1">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4"
                android:textSize="30dp"
                android:layout_weight="1"
                android:id="@+id/btn4"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="30dp"
                android:layout_weight="1"
                android:id="@+id/btn5"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="6"
                android:textSize="30dp"
                android:layout_weight="1"
                android:id="@+id/btn6"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="30dp"
                android:layout_weight="1"
                android:id="@+id/op5"
                />
        </TableRow>
        <TableRow android:layout_weight="1">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="30dp"
                android:layout_weight="1"
                android:id="@+id/btn1"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="30dp"
                android:layout_weight="1"
                android:id="@+id/btn2"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="30dp"
                android:layout_weight="1"
                android:id="@+id/btn3"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="+"
                android:textSize="30dp"
                android:layout_weight="1"
                android:id="@+id/op6"
                />
        </TableRow>
        <TableRow android:layout_weight="1">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Â±"
                android:textSize="30dp"
                android:layout_weight="1"
                android:id="@+id/op9"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="30dp"
                android:layout_weight="1"
                android:id="@+id/btn0"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="."
                android:textSize="30dp"
                android:layout_weight="1"
                android:id="@+id/op8"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="="
                android:textSize="30dp"
                android:layout_weight="1"
                android:id="@+id/op7"
                />
        </TableRow>
    </TableLayout>
</LinearLayout>
